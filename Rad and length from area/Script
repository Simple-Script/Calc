import math

def simplify_sqrt(n):
    """Return simplified radical form of sqrt(n) as (outside, inside)."""
    outside = 1
    inside = n
    # pull out perfect squares
    for i in range(int(math.sqrt(n)), 1, -1):
        if n % (i*i) == 0:
            outside = i
            inside = n // (i*i)
            break
    return (outside, inside)

def rectangle_from_area(area, smaller, ratio):
    # smaller side = x, larger = ratio*x
    x = math.sqrt(area / ratio)
    base = x if smaller == "base" else ratio * x
    height = x if smaller == "height" else ratio * x
    print("Rectangle:")
    print("Base =", base)
    print("Height =", height)

def triangle_from_area(area, smaller, ratio):
    # area = 1/2 * base * height
    # if smaller=base → b=x, h=ratio*x
    # so area = 1/2 * x * ratio*x = (ratio/2)*x^2
    x2 = (2 * area) / ratio
    outside, inside = simplify_sqrt(int(x2)) if abs(x2-round(x2))<1e-9 else (1,0)

    if inside == 0:  # perfect square
        x = math.sqrt(x2)
        base = x if smaller == "base" else ratio * x
        height = x if smaller == "height" else ratio * x
        print("Triangle:")
        print("Base =", base)
        print("Height =", height)
    else:
        # report in radical form
        if outside == 1:
            rad = "√" + str(inside)
        else:
            rad = str(outside) + "√" + str(inside)
        print("Triangle:")
        if smaller == "base":
            print("Base =", rad)
            print("Height =", str(ratio) + rad)
        else:
            print("Height =", rad)
            print("Base =", str(ratio) + rad)

def main():
    shape = input("Triangle or Rectangle? ").strip().lower()
    area = float(input("Area? "))
    smaller = input("Smaller side (base/height)? ").strip().lower()
    ratio = float(input("How many times larger? "))

    if shape == "rectangle":
        rectangle_from_area(area, smaller, ratio)
    elif shape == "triangle":
        triangle_from_area(area, smaller, ratio)
    else:
        print("Invalid choice.")

main()
